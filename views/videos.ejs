<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Exercise Videos</title>
  <style>
    /*
      Basic styling for page (body, headings, navigation links)
      Sets up background, font, colors, and spacing
    */
    body {
      font-family: Arial, sans-serif;
      background-color: white;
      margin: 0;
      padding: 20px;
      text-align: center;
    }

    h1 {
      color: black;
      font-size: 4em;
    }

    nav a {
      margin: 0 10px;
      text-decoration: none;
      color: #555;
      font-size: 2em;
      margin: 2em;
    }

    nav a:hover {
      text-decoration: underline;
    }

    /* Styles for search bar container and the input field */
    .search-container {
      margin-bottom: 20px;
    }

    .search-container input {
      padding: 10px;
      font-size: 1em;
      width: 80%;
      max-width: 400px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background-color: white;
      color: black;
    }

    .search-container input::placeholder {
      color: #888;
    }

    /*
      Styles for main list container holding video items
      Uses flexbox for arranging video cards in responsive grid
    */
    .list {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin-top: 30px;
      padding: 0;
      list-style: none;
    }

    /*
      Styles for each individual video card
      Sets background, border, padding, width, and a little shadow
    */
    .video-item {
      background-color: #f9f9f9;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      width: 300px; /* Fixed width for each card */
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      text-align: left; /* Aligns text inside the card */
    }

    /* Styles for the video title within the card */
    .video-card h3 {
      margin-top: 0;
      color: #333;
      font-size: 1.2em;
    }

    /*
      Styles for the video container to ensure the embedded video
      (like an iframe) maintains 16:9 aspect ratio
    */
    .video-container {
      position: relative;
      width: 100%;
      padding-bottom: 56.25%; 
      height: 0;
      overflow: hidden;
      margin-bottom: 10px;
    }

    /*
      Styles for the actual embedded video element (iframe or video tag)
      to make it fill its container while maintaining the aspect ratio
    */
    .video-container iframe,
    .video-container video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</head>
<body>

  <h1>Exercise Videos</h1>

  <nav>
    <a href="/">Home</a>
    <a href="/games">Games</a>
  </nav>

  <div id="videoGallery">
    <div class="search-container">
      <input
        type="text"
        class="search"
        placeholder="Search by title..."
      />
    </div>

    <div class="list">
      <% if (videos && videos.length) { %>
        <% videos.forEach(video => { %>
          <div class="video-item video-card">
            <h3 class="video-title"><%= video.title %></h3>
            <div class="video-container">
              <iframe
                src="<%= video.embedUrl %>"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                allowfullscreen>
              </iframe>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="no-videos">No videos available at the moment.</p>
      <% } %>
    </div>
  </div>

  <script src="//cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js"></script>

  <script>
    //Creates a new List.js object
    var videoList = new List('videoGallery', { //Specifies the container element by its ID
      valueNames: ['video-title'], //Tells List.js to search within elements with the class 'video-title'
      listClass: 'list' //Tells List.js which element contains the actual list items
    });
  </script>

</body>
</html>